    pipeline {
        agent any

        stages {

            stage('Git Checkout') {
                steps {
                    checkout([$class: 'GitSCM', branches: [[name: '*/branch']], extensions: [], userRemoteConfigs: [[credentialsId: â€˜credential-id', url: 'ssh git url']]])

                }
            }
            stage('create zip') {
                steps {
                    sh 'rm -rf .git && zip -r <zip_filename>.zip .'   	# remove .git and create zip of recent checkout python code 
                }
            }
            stage('S3 Downloads') {
                steps {
                    sh 'aws s3 cp s3://bucket-name/<script_name>.sh .'    # jenkins-script.sh
                }
            }
            
            stage('Sent zip to instance with help of script') {
                steps {                                              # bash script run on jenkins instance to deploy application to standalone instance
                    sh 'bash <script_name>.sh' 			             # run jenkins bash script
                }
            }
        }
    }
